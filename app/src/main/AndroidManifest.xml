<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.lab422.vkanalyzer">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".AnalyzerApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:screenOrientation="portrait"
        android:supportsRtl="true"
        android:theme="@style/AnalyzerTheme">
        <activity android:name=".ui.loading.LoadingActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>


        <activity
            android:name=".ui.login.LoginActivity"
            android:windowSoftInputMode="adjustPan|adjustResize" />

        <activity android:name=".ui.friends.FriendsFragment" />
        <activity android:name=".ui.mainScreen.MainActivity" />
        <activity android:name=".ui.mutualFriends.MutualFriendsActivity" />
        <activity android:name=".ui.friendsList.FriendsListActivity" />

    </application>

</manifest>