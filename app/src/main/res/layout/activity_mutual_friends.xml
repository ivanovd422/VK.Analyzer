<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    >

    <TextView
        android:id="@+id/tv_mutual_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="Общие друзья"
        />

    <TextView
        android:id="@+id/tv_first_user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_mutual_title"
        android:layout_marginTop="20dp"


        tools:text="Первый идишник"
        />

    <TextView
        android:id="@+id/tv_second_user_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tv_first_user_id"
        android:layout_marginTop="20dp"


        tools:text="Второй идишник"
        />

</RelativeLayout>